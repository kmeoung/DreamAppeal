<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <View
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <!--타이틀 바-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#006fc0"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_title"
        android:minHeight="78dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back"
            android:visibility="visible"
            android:minHeight="78dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:minHeight="78dp">

            <TextView
                android:id="@+id/tv_achivement_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_r"
                android:text="대표성과"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/bmjua"
                android:lines="1"
                android:maxLines="1"
                android:text="청년 창업 대표로 청와대 초청"
                android:textColor="@color/white"
                android:textSize="25sp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="48dp"
            android:layout_height="78dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_more_white"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:visibility="visible" />

    </LinearLayout>
    <!--타이틀 바-->

    <!--Contents-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="360dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/nanum_square_round_r"
            android:paddingLeft="17dp"
            android:paddingTop="12dp"
            android:paddingRight="17dp"
            android:text="내용내용내내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:id="@+id/tv_contents"/>

        <!--응원 / 댓글 / 공유-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <!--불꽃 (좋아요)-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:src="@drawable/flame_clicked" />

                    <TextView
                        android:id="@+id/tv_cheering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/bmjua"
                        android:text="0개"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>
                <!--불꽃 (좋아요)-->

                <!--댓글-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:src="@drawable/conversation" />

                    <TextView
                        android:id="@+id/tv_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/bmjua"
                        android:text="0개"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>
                <!--댓글-->

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_r"
                    android:text="1시간 전"
                    android:textSize="10sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:gravity="center|left"
                android:orientation="horizontal">

                <!--불꽃 (좋아요)-->
                <LinearLayout
                    android:id="@+id/ll_cheering"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_cheering"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:src="@drawable/ic_flame" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bmjua"
                        android:text="응원합니다"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>
                <!--불꽃 (좋아요)-->

                <!--댓글-->
                <LinearLayout
                    android:id="@+id/ll_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:scaleX="0.6"
                        android:scaleY="0.6"
                        android:src="@drawable/conversation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bmjua"
                        android:text="댓글 달기"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>
                <!--댓글-->

                <!--공유하기-->
                <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:src="@drawable/ic_share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bmjua"
                        android:text="퍼가기"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>
                <!--공유하기-->

            </LinearLayout>

        </LinearLayout>
        <!--응원 / 댓글 / 공유-->
    </LinearLayout>
    <!--Contents-->

</LinearLayout>