<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".activity.ActivityMain">

    <!--메인 뷰 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/v_status"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <!--툴바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43.67dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:scaleX="0.65"
                android:scaleY="0.65"
                android:src="@drawable/ic_menu" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/nanum_square_round_r"
                android:gravity="center"
                android:text="OOO 드림프로필"
                android:textColor="@color/white"
                android:textSize="15.87sp" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:scaleX="0.65"
                android:scaleY="0.65"
                android:src="@drawable/ic_search" />

            <TextView
                android:id="@+id/tv_text_btn"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_square_round_b"
                android:gravity="center"
                android:text="확인"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>
        <!--툴바-->

        <FrameLayout
            android:id="@+id/base_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />
        <!--하단 Nav-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/bottom_nav_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/house_black_silhouette_without_door" />

            <ImageView
                android:id="@+id/iv_timeline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/check_list" />

            <ImageView
                android:id="@+id/iv_add_board"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/iv_notification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/bell" />

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:scaleX="0.6"
                android:scaleY="0.63"
                android:src="@drawable/user" />

        </LinearLayout>
        <!--하단 Nav-->
    </LinearLayout>
    <!--메인 뷰 -->

    <LinearLayout
        android:id="@+id/drawer_container"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/gray"
        android:orientation="vertical" />

</androidx.drawerlayout.widget.DrawerLayout>
