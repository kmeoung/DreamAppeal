<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <View
        android:id="@+id/v_status"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <!--타이틀 바-->
    <!--툴바-->
    <com.truevalue.dreamappeal.base.BaseTitleBar
        android:id="@+id/btb_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_back_visibility="visible"
        app:is_menu_visibility="gone"
        app:is_right_text_visibility="gone"
        app:is_search_visibility="gone"
        app:right_text="확인"
        app:title="최근성과 타이틀" />
    <!--툴바-->
    <!--타이틀 바-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!--Contents-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="360dp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/pager_image"
                    android:layout_width="match_parent"
                    android:layout_height="360dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_black_box_indicator"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:id="@+id/ll_indicator">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="10 / 10"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:id="@+id/tv_indicator"/>

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:fontFamily="@font/nanum_square_round_r"
                android:paddingLeft="17dp"
                android:paddingTop="12dp"
                android:paddingRight="17dp"
                android:text="내용내용내내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용내용"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <!--응원 / 댓글 / 공유-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <!--불꽃 (좋아요)-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:src="@drawable/flame_clicked" />

                        <TextView
                            android:id="@+id/tv_cheering"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/bmjua"
                            android:text="0개"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>
                    <!--불꽃 (좋아요)-->

                    <!--댓글-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_comment"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:scaleX="0.5"
                            android:scaleY="0.5"
                            android:src="@drawable/conversation" />

                        <TextView
                            android:id="@+id/tv_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/bmjua"
                            android:text="0개"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>
                    <!--댓글-->

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_round_r"
                        android:text="1시간 전"
                        android:textSize="10sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <!--불꽃 (좋아요)-->
                    <LinearLayout
                        android:id="@+id/ll_cheering"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_cheering"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:src="@drawable/ic_flame" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bmjua"
                            android:text="응원합니다"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>
                    <!--불꽃 (좋아요)-->

                    <!--댓글-->
                    <LinearLayout
                        android:id="@+id/ll_comment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:scaleX="0.6"
                            android:scaleY="0.6"
                            android:src="@drawable/conversation" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bmjua"
                            android:text="댓글 달기"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>
                    <!--댓글-->

                    <!--공유하기-->
                    <LinearLayout
                        android:id="@+id/ll_share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:src="@drawable/ic_share" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bmjua"
                            android:text="퍼가기"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>
                    <!--공유하기-->

                </LinearLayout>

            </LinearLayout>
            <!--응원 / 댓글 / 공유-->
        </LinearLayout>
        <!--Contents-->

    </ScrollView>

</LinearLayout>