<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.ActivityMain">

    <!--메인 뷰 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/v_status"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <!--툴바-->
        <com.truevalue.dreamappeal.base.BaseMainTitleBar
            android:id="@+id/btb_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:is_back_visibility="gone"
            app:is_menu_visibility="visible"
            app:is_right_text_visibility="gone"
            app:is_search_visibility="visible"
            app:title="OOO 드림프로필" />
        <!--툴바-->

        <FrameLayout
            android:id="@+id/base_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_bottom">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <!--하단 Nav-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/bottom_nav_color"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/house_black_silhouette_without_door" />

                <ImageView
                    android:id="@+id/iv_timeline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/check_list" />

                <ImageView
                    android:id="@+id/iv_add_board"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:src="@drawable/edit" />

                <ImageView
                    android:id="@+id/iv_notification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/bell" />

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:scaleX="0.6"
                    android:scaleY="0.63"
                    android:src="@drawable/user" />

            </LinearLayout>

        </LinearLayout>
        <!--하단 Nav-->
    </LinearLayout>
    <!--메인 뷰 -->

    <LinearLayout
        android:id="@+id/drawer_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/gray"
        android:orientation="vertical" />

</androidx.drawerlayout.widget.DrawerLayout>
