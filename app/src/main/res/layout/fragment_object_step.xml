<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <!--툴바-->
    <com.truevalue.dreamappeal.base.BaseTitleBar
        android:id="@+id/btb_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_back_visibility="visible"
        app:is_menu_visibility="gone"
        app:is_right_text_visibility="invisible"
        app:is_search_visibility="gone"
        app:right_text="확인"
        app:title="실천 진행사항" />
    <!--툴바-->

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/rv_achivement_ing"/>

    <!--댓글 창-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#efecec"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/conversation" />

        <TextView
            android:id="@+id/tv_comment_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/bmjua"
            android:text="32개"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/drawer_user" />

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/edit_text_round_bg_gray_white_15"
            android:gravity="left|center_vertical"
            android:hint="댓글달기"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_commit_comment"
            style="@android:style/ButtonBar"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:fontFamily="@font/nanum_square_round_b"
            android:text="등록"
            android:textColor="@color/gray"
            android:textSize="16dp" />

    </LinearLayout>
    <!--댓글 창-->

</LinearLayout>