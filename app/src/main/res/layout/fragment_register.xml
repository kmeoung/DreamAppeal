<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">


    <!--툴바-->
    <com.truevalue.dreamappeal.base.BaseTitleBar
        android:id="@+id/btb_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:is_back_visibility="visible"
        app:is_menu_visibility="gone"
        app:is_right_text_visibility="gone"
        app:is_search_visibility="invisible"
        app:title="회원가입" />

    <!--툴바-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingRight="30dp">

            <!--이름-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="이름"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/edit_text_round_bg_gray"
                android:fontFamily="@font/nanum_square_round_b"
                android:hint="이름입력"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />
            <!--이름-->

            <!--성별-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="성별"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_gender_man"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_bg_selector_gray"
                    android:text="남"
                    android:textColor="@color/color_register_gender"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_gender_woman"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_bg_selector_gray"
                    android:text="여"
                    android:textColor="@color/color_register_gender"
                    android:textSize="18sp" />

            </LinearLayout>
            <!--성별-->

            <!--생일-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="생년월일"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_year"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edit_text_round_bg_gray"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:gravity="center"
                    android:hint="년도"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_month"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/edit_text_round_bg_gray"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:gravity="center"
                    android:hint="월"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_text_round_bg_gray"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:gravity="center"
                    android:hint="일"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="16sp" />

            </LinearLayout>
            <!--생일-->

            <!--아이디-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="아이디"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/edit_text_round_bg_gray"
                android:fontFamily="@font/nanum_square_round_b"
                android:hint="아이디(이메일)입력"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />
            <!--아이디-->

            <!--비밀번호-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_square_round_b"
                android:text="비밀번호"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/edit_text_round_bg_gray"
                android:fontFamily="@font/nanum_square_round_b"
                android:hint="비밀번호 입력"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_re_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_round_bg_gray"
                android:fontFamily="@font/nanum_square_round_b"
                android:hint="비밀번호 확인"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />
            <!--비밀번호-->

        </LinearLayout>

    </ScrollView>

    <!--회원가입 버튼-->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/color_btn"
        android:fontFamily="@font/nanum_square_round_b"
        android:text="개인정보처리방침 동의하고 회원가입하기"
        android:textColor="@color/white"
        android:textSize="17sp" />
    <!--회원가입 버튼-->

</LinearLayout>