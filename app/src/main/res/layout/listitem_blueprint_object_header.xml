<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--todo : 이쪽 더보기는 어떻게 합칠 지 고민 해야 합니다-->
    <Button
        android:id="@+id/btn_abliity_opportunity"
        android:layout_width="48dp"
        android:layout_height="25dp"
        android:layout_gravity="right|bottom"
        android:background="@null"
        android:fontFamily="@font/nanum_square_round_r"
        android:text="더보기"
        android:textColor="@color/gray"
        android:textSize="11sp"
        android:layout_marginRight="19dp"/>


    <!--실천 목표-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="17dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="12dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_object" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/nanum_pen"
            android:text="실천 목표"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <!--공백-->
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <!--공백-->

        <ImageView
            android:id="@+id/iv_add_object"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_add_btn" />

    </LinearLayout>
    <!--실천 목표-->

    <!--Divider-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    <!--Divider-->
</LinearLayout>

